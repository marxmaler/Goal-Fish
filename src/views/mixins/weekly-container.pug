include weekly-table.pug

mixin weeklyContainer(weekly, pageTitle, date)
    if weekly
        div.weekly-container
            if pageTitle==="Weekly" 
                h2 이번 주 목표
                span#weekly-term=`${termStart}~${termEnd}`
                p="남은 시간 "
                    span.weekly-container__ramaining-time
            else if pageTitle==="Previous Weekly" 
                h2.weekly-container__previousWeekly-date=`${termStart}~${termEnd}`
            +weeklyTable(weekly)
            div.weekly-container__progress-bar-container
                h4 진행 상황: 
                    span#progress-point
                progress(max="100")
            if pageTitle==="Weekly"
                div.weekly-container__edit-btn-container
                    a(href="/weekly/edit") 
                        button 수정하기
            else if pageTitle==="Previous Weekly"
                div.weekly-container__back-btn-container
                    a(href="/")
                        button 돌아가기

    else
        if pageTitle==="Weekly"    
            div.no-weekly-messeage-box
                p 아직 이번 주 목표를 설정하지 않으셨습니다.
                p 지금 새로 만들어보세요! 
                a(href="/weekly/add")
                    button 새 목표 작성
        else if pageTitle==="Previous Weekly"
            div.no-weekly-messeage-box
                p 해당 일자에는 주간 목표가 없습니다.
            div.weekly-container__back-btn-container
                a(href="/")
                    button 돌아가기
    div.previous-weekly-search
        if pageTitle==="Weekly"            
            p 이전 목표 조회
        if pageTitle==="Previous Weekly"            
            p 다른 날짜 조회
        p 
            input(type="date", class="previous-weekly")