                        ul
                            li 
                                a(href="/weekly/") 이번 주 목표
                            li 
                                a(href="/weekly/edit/") 이번 주 목표 수정
                            li 
                                a(href="/weekly/previous/") 지난 주 목표 조회


            if pageTitle.includes("Monthly")
                li.highlighted.main-menu
