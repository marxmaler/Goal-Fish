                            li 
                                a(href="/monthly/") 이번 달 목표
                            li 
                                a(href="/monthly/edit/") 이번 달 목표 수정
                            li 
                                a(href="/monthly/previous/") 지난 달 목표 조회
            if pageTitle.includes("Yearly")
                li.highlighted.main-menu
                    a(href="/yearly/") 연간목표
                    div.detail.hidden
                        ul
                            li 
                                a(href="/yearly/") 올해 목표
                            li 
                                a(href="/yearly/edit/") 올해 목표 수정
                            li 
                                a(href="/yearly/previous/") 작년 목표 조회
